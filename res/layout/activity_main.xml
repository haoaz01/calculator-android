<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input A:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edittext_InputA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input B:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edittext_InputB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sum"/>
        <Button
            android:id="@+id/buttonDifference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difference"/>

        <Button
            android:id="@+id/buttonProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"/>

        <Button
            android:id="@+id/buttonQuotient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotient" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    </LinearLayout>